{
  "name": "network-pulse",
  "version": "2.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "prestart": "shx rm -rf dist && shx mkdir dist",
    "start": "npm run build && npm-run-all --parallel server watch:**",
    "build": "npm run build:assets && npm run build:js && npm run build:scss && npm run build:static",
    "build:assets": "cp -r assets dist/",
    "build:js": "webpack --optimize-minimize",
    "build:scss": "node-sass scss/main.scss dist/css/main.css && postcss --use autoprefixer --autoprefixer.browsers 'last 3 versions' -o dist/css/main.css dist/css/main.css",
    "build:static": "cp -r node_modules/mofo-bootstrap/dest/css dist && postcss --use autoprefixer --autoprefixer.browsers 'last 3 versions' -o dist/css/mofo-bootstrap.css dist/css/mofo-bootstrap.css && cp index.html dist/index.html",
    "server": "node server.js",
    "watch:css": "chokidar 'components/**/*.scss' 'pages/**/*.scss' 'scss/**/*.scss' -c 'npm run build:scss'",
    "watch:html": "chokidar 'index.html' -c 'npm run build:static'",
    "watch:js": "chokidar 'main.jsx' 'js/**/*.js' 'components/**/*.jsx' 'pages/**/*.jsx' 'webpack.config.js' -c 'npm run build:js'",
    "test": "npm-run-all test:**",
    "test:js": "eslint --config .eslintrc.yaml 'main.jsx' 'js/**/*.js' 'components/**/*.jsx' 'pages/**/*.jsx' webpack.config.js",
    "test:scss": "stylelint --config .stylelintrc 'components/**/*.scss' 'pages/**/*.scss' 'scss/**/*.scss' --syntax scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/network-pulse.git"
  },
  "author": "Mozilla",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/network-pulse/issues"
  },
  "homepage": "https://github.com/mozilla/network-pulse#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "chokidar": "^1.6.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.11.1",
    "eslint-plugin-react": "^6.7.1",
    "mofo-bootstrap": "^2.0.1",
    "mofo-style": "^2.4.0",
    "mofo-ui": "^1.6.0",
    "node-sass": "^3.13.0",
    "npm-run-all": "^3.1.1",
    "postcss-cli-simple": "^1.0.1",
    "shx": "^0.2.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0",
    "webpack": "^1.13.3"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "pushstate-server": "^2.1.0",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^3.0.0",
    "slug": "^0.9.1",
    "superagent": "^3.1.0"
  },
  "engines": {
    "node": "^6.0.0",
    "npm": "^3.0.0"
  }
}
